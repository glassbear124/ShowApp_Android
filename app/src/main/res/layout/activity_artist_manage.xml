<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cellBg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rnMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rnTop"
            android:background="@color/bgColor"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/icn_back"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/manageTitleText"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Manage"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnMain"
            android:layout_below="@+id/rnTop"
            android:layout_above="@+id/vBottom"
            android:background="@color/cellBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAddArtist"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="הוסף אמן"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtStage"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="הוסף במה"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


                <TextView
                    android:id="@+id/txtAddShow"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="הוסף הופעה"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtEditArtist"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="עריכת אמן"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtEditStage"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="ערוך במה"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtEditShow"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="ערוך הופעה"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtEditAbout"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="ערוך פרופיל"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtAddMusic"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="הוסף קליפ מוסיקה"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtContactUs"
                    android:background="@color/tint"
                    android:layout_marginTop="20dp"
                    android:text="עוד שינוים? צור קשר"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />



            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/vBottom"
            android:layout_alignParentBottom="true"
            android:background="@color/bgColor"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </View>

    </RelativeLayout>

    <LinearLayout android:id="@+id/lnEdit"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/bgColor"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/btnCancel"
                android:src="@drawable/icn_back"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:textSize="18dp"
                android:textColor="#00f"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edit About Text"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btnSave"
                android:src="@drawable/icn_back"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="Save"
                android:textSize="18dp"
                android:textColor="#f00"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtComment"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Type Text Here... 300 Characters Remaining"
            android:textColor="#00f"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:hint="Type Text..."
            android:maxLength="300"
            android:textColorHint="#aaaaaa"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="top"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- lnHeartDetail -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lnHeartDetail"
        android:orientation="vertical"
        android:background="@color/bgColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_width="160dp"
                android:layout_height="62dp" />

            <View
                android:id="@+id/btnX"
                android:background="@drawable/btn_x"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnScrl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editArtist"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/round_bg"
                    android:layout_width="match_parent"
                    android:gravity="right|center_vertical"
                    android:hint="חפש"
                    android:inputType="text"
                    android:layout_height="40dp" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
